# Environment Variables Template
# Copy this file to .env.local and fill in your values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.vercel.app
NEXT_PUBLIC_SITE_NAME="Premium Agency"

# Contact Form (if using a service like Formspree, EmailJS, etc.)
NEXT_PUBLIC_FORM_ENDPOINT=your-form-endpoint-here
FORM_SECRET_KEY=your-secret-key-here

# Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Email Service (if implementing server-side email)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_TO=contact@yourdomain.com

# Database (if needed)
DATABASE_URL=your-database-connection-string

# Social Media Links
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/your-company
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourhandle
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/yourhandle
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/yourpage
